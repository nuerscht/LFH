# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Products
GET     /products                   controllers.Application.products()
GET     /details/:id                controllers.Application.productDetails(id: Integer)
GET     /search            			controllers.Application.search(p:Int ?= 0, s ?= "Title", o ?= "asc", q ?= "")

POST 	/rate/:id					controllers.Application.submitRating(id: Integer)

# API
GET		/customers					controllers.Api.customers(id: String, datetime: String ?= null)
GET		/orders						controllers.Api.orders(id: String, datetime: String ?= null)
GET		/articles					controllers.Api.articles(id: String, datetime: String ?= null)
GET		/version					controllers.Api.version()

#Account
GET		/account					controllers.Account.registerIndex()
POST	/account/register			controllers.Account.register()
POST	/account/login				controllers.Account.login()
GET 	/account/logout				controllers.Account.logout()

#User
GET		/user/data					controllers.User.showData()
GET		/user/data/update			controllers.User.updateData()
GET		/user/transactions			controllers.User.showTransactions()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
